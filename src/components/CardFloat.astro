---
import ButtonGet from "./ButtonGet.astro";
---

<div>
    <h2>Ready To Build Your Community!</h2>
    <ButtonGet addClass={true} />
</div>


<style>
    div {
        min-width: 280px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        background-color: white;
        position: absolute;
        color: black;
        text-align: center;
        top: -60px;
        left: 10px;
        right: 10px;
        max-width: 630px;
        margin: 0 auto;
        border-radius: 20px;
        z-index: 100;
        box-shadow: 0px 0px 15px #00000033;
        padding: 30px 10px;
    }

    h2 {
        font-size: 16px;
    }

    @media (min-width: 768px) {
        div {
            width: 560px;
        }

        h2 {
            font-size: 24px;
        }
    }

    @media (min-width: 1024px) {
        div {
            width: 630px;
            top: -80px;
        }
    }
</style>