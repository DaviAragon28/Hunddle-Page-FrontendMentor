---
export interface Props {
	title: string;
	body: string;
	image: string;
	reverse: boolean
}

const { image, title, body, reverse } = Astro.props;
---

<div class={`card ${reverse && 'reverse'}`}>
	<img src={image} alt={title} />
	<div>
		<h2>{title}</h2>
		<p>{body}</p>
	</div>
</div>

<style>
	.card {
		min-width: 280px;
		max-width: 880px;
		text-align: center;
		display: flex;
		flex-direction: column;
		border-radius: 20px;
		gap: 20px;
		padding: 30px 20px;
		margin: 0 auto;
		box-shadow: 1px 3px 9px rgb(0 0 0 / 19%);
	}

	.card div {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}
	img {
		width: 220px;
		margin: 0 auto;
	}
	h2 {
		font-size: 20px;
	}
	p {
		padding: 0 10px;
		color: var(--GrayishBlue);
		font-size: 14px;
	}

	@media (min-width: 768px) {
		.card {
			flex-direction: row;
			align-items: center;
			text-align: left;
			flex-direction: row-reverse;
		}

		.reverse {
			flex-direction: row;
		}

		.card div {
			width: 50%;
			gap: 10px;	
		}
		p {
			padding: 0;
		}
	}
	@media (min-width: 1024px) {
		.card {
			padding: 30px 50px;
		}

		.card div {
			width: 45%;
			gap: 30px;	
		}

		img {
			width: 320px;
		}

		h2 {
			font-size: 28px;
		}

		p {
			font-size: 16px;
		}
	}
</style>
